<h1>Data Pelanggan</h1>

<p><%= link_to 'Tambah Data', new_mod_pelanggan_path %></p>

<p>
	<%= form_tag(mod_pelanggans_path, method: :get) do %>
		<%= text_field_tag :search %>
		<%= submit_tag 'Search' %>
	<% end %>
</p>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Nama</th>
			<th>Alamat</th>
			<th>Jenis Kelamin</th>
			<th>No Telp</th>
			<th>Opsi</th>
		</tr>
	</thead>
	<tbody>

		<% @pelanggans.each do |pelanggan| %>
		<tr>
			<td><%= pelanggan.id %></td>
			<td><%= pelanggan.nama %></td>
			<td><%= pelanggan.alamat %></td>
			<td><%= pelanggan.jenis_kelamin %></td>
			<td><%= pelanggan.no_telp %></td>
			<td>
				<%= link_to 'Edit', edit_mod_pelanggan_path(pelanggan) %> |
				<%= link_to 'Show', mod_pelanggan_path(pelanggan) %> |
				<%= link_to 'Delete', mod_pelanggan_path(pelanggan), method: :delete, data: {confirm: 'Anda yakin ingin menghapus ini ?'} %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<p><%= paginate @pelanggans %></p>
