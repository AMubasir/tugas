<h1>Transaksi</h1>

<p><%= link_to 'Transaksi Baru', new_mod_transaksi_path %></p>

<p>
	<%= form_tag(mod_transaksis_path, method: :get) do %>
		<%= text_field_tag :search %>
		<%= submit_tag 'Search' %>
	<% end %>
</p>

<table>
	<thead>
		<tr>
			<th>ID Transaksi</th>
			<th>ID Mobil</th>
			<th>ID Pelanggan</th>
			<th>Tanggal Sewa</th>
			<th>Tanggal Kembali</th>
			<th>Lama Sewa</th>
			<th>Total Bayar</th>
			<th>Uang Muka</th>
			<th>Sisa Bayar</th>
			<th>Keterangan</th>
			<th>Opsi</th>
		</tr>
	</thead>
	<tbody>

		<% @transaksis.each do |transaksi| %>
		<tr>
			<td><%= transaksi.id %></td>
			<td><%= transaksi.mobil_id %></td>
			<td><%= transaksi.pelanggan_id %></td>
			<td><%= transaksi.tanggal_sewa %></td>
			<td><%= transaksi.tanggal_kembali %></td>
			<td><%= transaksi.lama_sewa %></td>
			<td><%= transaksi.total_bayar %></td>
			<td><%= transaksi.uang_muka %></td>
			<td><%= transaksi.sisa_bayar %></td>
			<td><%= transaksi.keterangan %></td>
			<td>
				<%= link_to 'Edit', edit_mod_transaksi_path(transaksi) %> |
				<%= link_to 'Show', mod_transaksi_path(transaksi) %> |
				<%= link_to 'Delete', mod_transaksi_path(transaksi), method: :delete, data: {confirm: 'Anda yakin ingin menghapus ini ?'} %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<p><%= paginate @transaksis %></p>
